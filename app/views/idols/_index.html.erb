<% idols.each do |idol| %>
  <div class="list-box idol-box">
    <% if idol.image_id? %>
      <%= image_tag idol.image_id.to_s, size: "240x240" %>
    <% else %>
      <%= image_tag "no_image.jpg", size: "240x240" %>
    <% end %>
    <span class="list-title"><%= link_to idol.name, idol_path(idol) %></span>
      <% if user_signed_in? %>
        <% if idol.favorited_by?(current_user) %>
          <%= link_to "お気に入り解除", idol_favorites_path(idol.id), method: :delete , class: "glyphicon glyphicon-heart-empty btn1 btn1-success" %>
        <% else %>
          <%= link_to "お気に入り登録", idol_favorites_path(idol.id), method: :post , class: "glyphicon glyphicon-heart-empty btn1 btn1-danger" %>
        <% end %>
      <% end %>
  </div>
<% end %>