<div class="row">

  <!-- サイドバー -->
  <div class="col-xs-4">
    <%= render "layouts/sidebar"%>
  </div>

  <div class="col-xs-8">
    <h2 class="heading"><span>アイドル詳細</span>&emsp;<%= @idol.name %></h2>
    <hr>

    <div class="row">
      <!-- 画像 -->
      <div class="col-xs-7 photo">
        <% if @idol.image_id? %>
          <%= image_tag @idol.image_id.to_s, size: "360x360" %>
        <% else %>
          <%= image_tag "no_image.jpg", size: "360x360" %>
        <% end %>
      </div>
      <!-- 詳細 -->
      <div class="col-xs-5">
        <h4>About</h4>
        <p><%= @idol.about %></p>
        <%= link_to "公式サイト", @idol.official_site %>
        <div class="social-icon">
          <% if @idol.official_twitter? %>
            <%= link_to @idol.official_twitter do %>
              <img src="<%= asset_path "twitter.png" %>" alt="Twitter">
            <% end %>
          <% end %>
          <% if @idol.official_youtube? %>
            <%= link_to @idol.official_youtube do %>
              <img src="<%= asset_path "youtube.png" %>" alt="Youtube">
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <hr>

    <!-- いいね機能 -->
    <% if user_signed_in? %>
      <div class="row">
        <div class="col-xs-6">
          <% if @idol.favorited_by?(current_user) %>
            <%= link_to "お気に入り解除", idol_favorites_path(@idol.id), method: :delete , class: "glyphicon glyphicon-heart-empty btn1 btn1-success" %>
          <% else %>
            <%= link_to "お気に入り登録", idol_favorites_path(@idol.id), method: :post , class: "glyphicon glyphicon-heart-empty btn1 btn1-danger" %>
          <% end %>
        </div>

        <div class="col-xs-6">
          <%= link_to "編集する", edit_idol_path(@idol.id), class: "btn1 btn1-warning" %>
        </div>
      </div>
    <% end %>
    <hr>

    <div class="row">
      <h3>関連イベント情報</h3>
      <%= render 'events/index', events: @events %>
    </div>

  </div>
</div>

