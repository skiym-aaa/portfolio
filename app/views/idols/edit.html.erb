<div class="row">

  <!-- サイドバー -->
  <div class="col-xs-4">
    <%= render "layouts/sidebar"%>
  </div>

  <div class="col-xs-8">
    <h2 class="heading"><span>アイドル編集</span></h2>

    <div class="row">
      <%= form_for @idol, url: idol_path, method: :patch do |f| %>

      <!-- エラーメッセージ -->
      <%= render 'layouts/errors', obj: @idol %>

        <!-- 画像投稿機能 -->
        <div class="col-xs-6">
          <%= image_tag @idol.image_id.to_s, size: "300x200" %>
          <%= f.file_field :image_id %>
        </div>

        <!-- 情報入力フォーム -->
        <div class="col-xs-6">
          <table>
            <tr>
              <td><%= f.label :アイドル名 %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :About %></td>
              <td><%= f.text_area :about %></td>
            </tr>
            <tr>
              <td><%= f.label :公式サイト %></td>
              <td><%= f.text_field :official_site %></td>
            </tr>
          </table>
          <%= f.submit "編集を保存する", class: "btn btn-lg btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
