<div class="row">
  <h2 class="heading"><span>マイページ</span></h2>
  <div class="col-xs-6">
    <div class="row">
      <div class="col-xs-6">
        <h4>登録情報</h4>
        <table style>
          <tr>
            <td>名前(ニックネーム)</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        </table>
      </div>
      <div class="col-xs-6">
        <p>プロフィール画像</p>
        <%= image_tag @user.image_id.to_s, size: "150x100" %>
      </div>

      <div class="row">
        <%= link_to "編集する",edit_user_path(@user), class: "btn btn-lg btn-success" %>
        <%= link_to "パスワードを変更する",new_user_password_path(@user), class: "btn btn-lg btn-primary" %>
        <%= link_to "退会する",user_confirm_path, class: "btn btn-lg btn-danger" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <p>お気に入りアイドル一覧</p>
        <table class="table table-hover">
          <thead>
            <tr class="active">
              <th>ID</th>
              <th>アイドル名</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% current_user.favorite_idols.each do |idol| %>
              <tr>
                <td><%= idol.id %></td>
                <td><%= link_to idol.name, idol_path(idol) %></td>
                <td><%= link_to "お気に入り解除", idol_favorites_path(idol.id), method: :delete , class: "btn btn-xs btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-xs-6">
        <p>お気に入り場所一覧</p>
        <table class="table table-hover">
          <thead>
            <tr class="active">
              <th>ID</th>
              <th>場所名</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% current_user.bookmark_places.each do |place| %>
              <tr>
                <td><%= place.id %></td>
                <td><%= link_to place.name, place_path(place) %></td>
                <td><%= link_to "お気に入り解除", place_bookmarks_path(place.id), method: :delete , class: "btn btn-xs btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <h4>オススメイベント情報</h4>
    <table class="table table-hover">
          <thead>
            <tr class="active">
              <th>日時</th>
              <th>イベント名</th>
              <th>場所</th>
              <th>アイドル名</th>
              <th>開始時間</th>
              <th>終了時間</th>
            </tr>
          </thead>

          <tbody>
          </tbody>
        </table>
  </div>
</div>
