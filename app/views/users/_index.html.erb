<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <!-- 退会済みユーザーは"no_image"を表示 -->
          <% if user.image_id? && user.is_deleted == false %>
            <%= image_tag user.image_id.to_s, size: "60x60" %>
          <% else %>
            <%= image_tag "no_image.jpg", size: "60x60" %>
          <% end %>
        </td>
        <td><%= user.name%></td>
        <td>フォロー数：<%= user.follower.count %></td>
        <td>フォロワー数：<%= user.followed.count %></td>
        <td>
          <% if current_user != user %>
            <%if current_user.following?(user) %>
              <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn1 btn1-success" %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn1 btn1-danger" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>