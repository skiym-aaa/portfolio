<div class="row">

  <!-- サイドバー -->
  <div class="col-xs-4">
    <!-- カレンダー -->
    <div id="calendar"></div>
    <hr>

    <!-- 検索フォーム(検索結果のモデルごとにデフォルトカテゴリ表示の場合分け) -->
    <div class="search-form" style="margin-top: 20px ; text-align: center;">
      <%= form_tag(search_path, method: :get) do %>
        <div class="glyphicon glyphicon-search"></div>
        <%= text_field_tag 'search[content]', '', placeholder: " 検索" %>
        <!-- アイドル、場所、イベントで検索カテゴリの順番を変更 -->
        <% if @model == 'idol' %>
          <%= select_tag 'search[model]', options_for_select({"アイドル" => "idol", "場所" => "place", "イベント" => "event"}) %>
          <% select_tag 'search[method]', options_for_select({"部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect"}) %>
          <%= submit_tag '検索' %>
        <% elsif @model == 'place' %>
          <%= select_tag 'search[model]', options_for_select({"場所" => "place", "イベント" => "event", "アイドル" => "idol"}) %>
          <% select_tag 'search[method]', options_for_select({"部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect"}) %>
          <%= submit_tag '検索' %>
        <% else %>
          <%= select_tag 'search[model]', options_for_select({"イベント" => "event", "アイドル" => "idol", "場所" => "place"}) %>
          <% select_tag 'search[method]', options_for_select({"部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect"}) %>
          <%= submit_tag '検索' %>
        <% end %>
      <% end %>
    </div>
    <hr>

    <!-- GitHub草 -->
    <div class="github" style="text-align: center">
      <h3>GitHub Activities</h3>
      <h4><i class="fab fa-github"></i> <%= link_to "skiym-aaa", "https://github.com/skiym-aaa/portfolio" %></h4>
      <img src="https://grass-graph.moshimo.works/images/skiym-aaa.png?rotate=270">
    </div>
  </div>

  <!-- 検索結果表示 -->
  <div class="col-xs-8">
    <% if @model == 'idol' %>
      <h3 class="glyphicon glyphicon-search">'<%= @content %>'の検索結果(アイドル)</h3>
      <hr>
    <%= render 'idols/index', idols: @records %>
    <% elsif @model == 'place' %>
      <h3 class="glyphicon glyphicon-search">'<%= @content %>'の検索結果(場所)</h3>
      <hr>
      <%= render 'places/index', places: @records %>
    <% else @model == 'event' %>
      <h3 class="glyphicon glyphicon-search">'<%= @content %>'の検索結果(イベント)</h3>
      <hr>
      <%= render 'events/index', events: @records %>
    <% end %>
  </div>

</div>
