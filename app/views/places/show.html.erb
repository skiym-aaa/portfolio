    <div class="row">

        <!-- 画像 -->
        <div class="col-xs-6">
          <%= image_tag @place.image_id.to_s, size: "300x200" %>
        </div>
        <!-- 詳細 -->
        <div class="col-xs-6">
          <h4>About</h4>
          <p><%= @place.about %></p>
