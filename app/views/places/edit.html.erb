<div class="row">
  <div class="col-xs-4">
    <%= render "layouts/sidebar"%>
  </div>
  <div class="col-xs-8">
    <h2 class="heading"><span>場所編集</span></h2>

    <div class="row">
      <%= form_for @place, url: place_path, method: :patch do |f| %>

        <!-- 画像投稿機能 -->
        <div class="col-xs-6">
          <div class="col-xs-6">
            <%= image_tag @place.image_id.to_s, size: "300x200" %>
            <%= f.label :画像 %>
            <%= f.file_field :image_id %>
          </div>
        </div>
        <!-- 情報入力フォーム -->
        <div class="col-xs-6">
          <table>
            <tr>
              <td><%= f.label :場所名 %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :住所 %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :公式サイト %></td>
              <td><%= f.text_field :official_site %></td>
            </tr>
            <tr>
              <td><%= f.label :About %></td>
              <td><%= f.text_area :about %></td>
            </tr>
          </table>
          <%= f.submit "編集を保存する", class: "btn btn-lg btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
