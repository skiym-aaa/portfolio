<% provide(:title, "チャットルーム(#{@room.id})") %>

<div class="col-xs-6">

  <%= link_to "<<back index", rooms_path %>

  <h1><%= "Chat Room #{@room.id}" %></h1>
  <hr>

  <!-- 投稿フォーム -->
  <div class="input">
    <form>
      <label>投稿:</label><br>
      <!-- room_speaker からサーバへメッセージを送信する -->
      <input type="text" data-behavior="room_speaker" id="chat-message">
    </form>
  </div>
  <hr>

  <div id="chats", data-room_id="<%= @room.id %>">
    <%= render partial: "chats/chat", collection: @chats %>
  </div>
</div>

