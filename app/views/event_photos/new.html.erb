<% provide(:title, "イベント写真追加(#{@event.title})") %>

<div class="row">

  <!-- サイドバー -->
  <div class="col-xs-4">
    <%= render "layouts/sidebar"%>
  </div>

  <div class="col-xs-8">
    <h2 class="heading"><span>イベント写真追加</span>&emsp;<%= @event.title %></h2>
    <hr>

    <!-- 写真投稿フォーム -->
    <%= form_for @event_photo, url: event_event_photos_path(@event.id), html: {class: "dropzone"} do |f| %>
      <div class="dz-message" data-dz-message>
        <span>ファイルをここにドロップするか<br>ここをクリックしてください。<br>ファイルは自動でアップロードされます！<br>チェックマークがついたら完了です！</span>
      </div>
      <div class="fallback">
        <%= f.file_field :image_id, multiple: true %>
      </div>
    <% end %>
    <%= link_to "戻る", event_path(@event.id) %>
  </div>
</div>