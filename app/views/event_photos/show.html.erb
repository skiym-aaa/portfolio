<% provide(:title, "イベント写真(#{@event.title}-#{@event_photo.id})") %>

<div class="row">

  <div class="col-xs-4">
    <%= render "layouts/sidebar"%>
  </div>

  <div class="col-xs-8 center">
    <h2 class="heading"><span>イベント写真詳細</span>&emsp;<%= @event.title %></h2>
    <hr>
    <div class="row">

      <div class="col-xs-12">
        <%= link_to @event_photo.image_id.url do %>
          <%= image_tag @event_photo.image_id.to_s, size: "540x360" %>
        <% end %>
        <div class="photo-tag">
          <% @event_photo.tags.each do |tag| %>
            <span class="label label-primary"><%= tag.name %></span>
          <% end %>
        </div>
        <div class="twitter-share">
        　<a href="//twitter.com/share" class="twitter-share-button" data-text="<%= @event.title %>写真|idol places-アイドル現場情報共有サイト-" data-url="<%= request.url %>" data-lang="ja">
         Tweet
         </a>
        </div>

        <!-- 退会済みユーザーは"退会済みユーザー"と表示 -->
        <h4>イベント名：<%= link_to @event_photo.event.title, event_path(@event_photo.event) %></h4>
        <% if @event_photo.user.is_deleted %>
          <h4>投稿者：退会済みユーザー</h4>
        <% else %>
          <h4>投稿者：<%= link_to @event_photo.user.name, user_path(@event_photo.user) %></h4>
        <% end %>

      </div>
    </div>
  </div>

</div>