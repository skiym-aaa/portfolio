<% if user_signed_in? %>
  <% if current_user != user %>
    <%if current_user.following?(user) %>
      <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, remote: true, class: "btn1 btn1-success" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, remote: true, class: "btn1 btn1-danger" %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn1 btn1-danger" %>
<% end %>