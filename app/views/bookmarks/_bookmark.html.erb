<% if user_signed_in? %>
  <% if place.bookmarked_by?(current_user) %>
    <%= link_to "お気に入り解除", place_bookmarks_path(place.id), method: :delete , class: "glyphicon glyphicon-heart-empty click-btn click-btn-success" %>
  <% else %>
    <%= link_to "お気に入り登録", place_bookmarks_path(place.id), method: :post , class: "glyphicon glyphicon-heart-empty click-btn click-btn-danger" %>
  <% end %>
<% else %>
  <%= link_to "お気に入り登録", place_bookmarks_path(place.id), method: :post , class: "glyphicon glyphicon-heart-empty click-btn click-btn-danger" %>
<% end %>