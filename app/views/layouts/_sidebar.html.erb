<div id="calendar"></div>

<!-- モーダル・ダイアログ -->
<div id="calendarEventModal" class="modal fade">
  <div class="modal-dialog modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">×</span>
          <span class="sr-only">close</span>
        </button>
        <span id="modalInfo" class="modal-title"></span>
      </div>
      <div id="modalDetail" class="modal-body"></div>
      <div id="" class="modal-footer"></div>
    </div>
  </div>
</div>
<hr>

<!-- 検索フォーム -->
<div class="search-form" style="margin-top: 20px ; text-align: center;">
  <%= form_tag(search_path, method: :get) do %>
    <div class="glyphicon glyphicon-search"></div>
    <%= text_field_tag 'search[content]', '', placeholder: " 検索" %>
    <!-- アイドル、場所、イベントで検索カテゴリの順番を変更 -->
    <% if request.path.include?("/idols") %>
      <%= select_tag 'search[model]', options_for_select({"アイドル" => "idol", "場所" => "place", "イベント" => "event"}) %>
      <% select_tag 'search[method]', options_for_select({"部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect"}) %>
      <%= submit_tag '検索' %>
    <% elsif request.path.include?("/places") %>
      <%= select_tag 'search[model]', options_for_select({"場所" => "place", "イベント" => "event", "アイドル" => "idol"}) %>
      <% select_tag 'search[method]', options_for_select({"部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect"}) %>
      <%= submit_tag '検索' %>
    <% else %>
      <%= select_tag 'search[model]', options_for_select({"イベント" => "event", "アイドル" => "idol", "場所" => "place"}) %>
      <% select_tag 'search[method]', options_for_select({"部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect"}) %>
      <%= submit_tag '検索' %>
    <% end %>
  <% end %>
</div>
<hr>

