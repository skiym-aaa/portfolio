<!-- カレンダー -->
<div id="calendar"></div>

<!-- 検索フォーム -->
<div class="search-form" style="margin-top: 20px ; text-align: center;">
  <%= form_tag(search_path, method: :get) do %>
    <i class="fas fa-search"></i>
    <%= text_field_tag 'search[content]', '', placeholder: " 検索" %>
    <%= select_tag 'search[model]', options_for_select({"アイドル" => "idol", "場所" => "place", "イベント" => "event"}) %>
    <%= select_tag 'search[method]', options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
    <%= submit_tag '検索' %>
  <% end %>
</div>