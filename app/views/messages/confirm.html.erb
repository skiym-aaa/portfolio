<div class="col-md-6 col-xs-12">
  <%= form_for @message, :url => contact_done_path do |f| %>
    <div>
      <h2>メッセージ確認</h2>
      <hr>

      <div>
        <strong>名前</strong>
        <p>
          <%= f.hidden_field :name %>
          <%= @message.name %>
        </p>
      </div>
      <div>
        <strong>メールアドレス</strong>
        <p>
          <%= f.hidden_field :email %>
          <%= @message.email %>
        </p>
      </div>
      <div>
        <strong>内容</strong>
        <p>
          <%= f.hidden_field :content %>
          <%= simple_format(@message.content) %>
        </p>
      </div>
        <%= f.submit '戻る', name: 'back' %>
        <%= f.submit '送信する' %>
    </div>
  <% end %>
</div>