<table>
  <thead>
    <tr>
      <th>イベント名</th>
      <th>イベント内容</th>
      <th>アイドル名</th>
      <th>場所名</th>
      <th>開始予定時間</th>
      <th>終了予定時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.body %></td>
        <td><%= event.idol.name %></td>
        <td><%= event.place.name %></td>
        <td><%= l event.start_date %></td>
        <td><%= l event.end_date %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>