<table>

  <thead>
    <tr>
      <th>イベント名</th>
      <th>アイドル名</th>
      <th>場所名</th>
      <th>開始予定時間</th>
      <th>終了予定時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><%= link_to event.title, event_path(event) %></td>
        <td><%= link_to event.idol.name, idol_path(event.idol.id) %></td>
        <td><%= link_to event.place.name, place_path(event.place.id) %></td>
        <td><%= l event.start_date %></td>
        <td><%= l event.end_date %></td>

        <% if user_signed_in? %>
          <td>
            <% if event.event_registered_by?(current_user) %>
            <%= link_to "解除", event_event_registers_path(event.id), method: :delete , class: "btn1 btn1-success" %>
            <% else %>
            <%= link_to "登録", event_event_registers_path(event.id), method: :post , class: "btn1 btn1-danger" %>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= link_to "登録", event_event_registers_path(event.id), method: :post , class: "btn1 btn1-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>